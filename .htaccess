ErrorDocument 404 /error/404.html

ErrorDocument 403 /error/403.html

RewriteEngine on
rewritemap lowercase int:tolower
RewriteCond $1 [A-Z]
RewriteRule ^/(.*)$ /${lowercase:$1} [R=301,L]

# Protect the .htaccess file

<Files .htaccess>
Order Allow,Deny
Deny from all
</Files>

# protect the .gitignore file

<Files .gitignore>
Order Allow,Deny
Deny from all
</Files>

# protect the README.md file

<Files README.md>
Order Allow,Deny
Deny from all
</Files>
